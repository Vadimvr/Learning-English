<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Data\img\**" />
    <EmbeddedResource Remove="Data\img\**" />
    <None Remove="Data\img\**" />
    <Page Remove="Data\img\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Data\image\Rectangle4.png" />
    <None Remove="Views\Windows\help.svg" />
    <None Remove="Views\Windows\sound.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Data\image\Rectangle4.png" />
    <Resource Include="Resources\img\sound.png" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Resources\Style\CheckAnswerStyle.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Resources\Style\MenuItemStyle.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Test\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NUnit" Version="3.13.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.17.0" />
  </ItemGroup>

</Project>
